<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:gravity="bottom" android:id="@+id/linearLayout">

    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            app:srcCompat="@drawable/profiledefault"
            android:contentDescription="@string/nav_header_desc"
            android:id="@+id/userImageNavHeader"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/loginButtonNavHeader"
            app:layout_constraintStart_toStartOf="@+id/loginButtonNavHeader"
            app:layout_constraintEnd_toEndOf="@+id/loginButtonNavHeader"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:id="@+id/userNameNavHeader"
            app:layout_constraintStart_toEndOf="@+id/userImageNavHeader"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="@+id/userImageNavHeader" tools:text="@string/nav_header_title"
            android:textColor="@android:color/white"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userEmailNavHeader"
            app:layout_constraintStart_toEndOf="@+id/userImageNavHeader"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/userNameNavHeader" tools:text="@string/nav_header_subtitle"
            android:textColor="@android:color/white"/>
    <Button
            android:text="Login"
            android:layout_height="wrap_content"
            android:id="@+id/loginButtonNavHeader"
            android:background="@android:color/transparent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_width="wrap_content"
            android:layout_marginBottom="8dp" android:layout_marginLeft="8dp" android:onClick="loginClicked"
            android:textColor="@android:color/white"/>
    <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@drawable/addchannelbutton"
            android:id="@+id/addChannelButton"
            android:background="@android:color/transparent" android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="@+id/loginButtonNavHeader"
            app:layout_constraintBottom_toBottomOf="@+id/loginButtonNavHeader" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:padding="5dp"
            android:onClick="addChannelClicked"/>

</android.support.constraint.ConstraintLayout>
